generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

enum AttemptType {
  ONCE
  LIMITED
  UNLIMITED
}

// Defines the User table
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String @default("")
  lastName  String @default("")

  // Relation: One user can create many tests
  tests                   Test[]
  submissions             TestSubmission[] // A user can have many submissions
  switchResults           SwitchChallengeResult[]
  digitResults            DigitChallengeResult[]
  geoSudoChallengeResults GeoSudoChallengeResult[]
}

// Defines the Test table
model Test {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  duration       Int
  scheduledStart DateTime?
  scheduledEnd   DateTime?
  createdAt      DateTime  @default(now())

  showResult Boolean @default(true)

  attemptType AttemptType @default(ONCE)
  maxAttempts Int?

  type TestType @default(STANDARD)

  switchConfig SwitchChallengeConfig?

  createdById Int
  createdBy   User @relation(fields: [createdById], references: [id])

  // Relation: One test has many questions & can have many submissions
  questions               Question[]
  submissions             TestSubmission[]
  switchResults           SwitchChallengeResult[]
  digitResults            DigitChallengeResult[]
  geoSudoChallengeResults GeoSudoChallengeResult[]
}

// Defines the Question table
model Question {
  id            Int     @id @default(autoincrement())
  text          String
  type          String // "MCQ" or "SHORT"
  options       Json // Array of options for MCQ (MySQL doesn't support String[])
  correctAnswer String? // Optional for short answers

  // Relation: Question belongs to a Test
  testId  Int
  test    Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  answers Answer[] // A question can have many answers
}

model TestSubmission {
  id        Int      @id @default(autoincrement())
  status    String   @default("COMPLETED") // 'COMPLETED', 'TIMEOUT', 'TERMINATED'
  createdAt DateTime @default(now())

  score        Int   @default(0)
  answersDraft Json?

  testId Int
  test   Test @relation(fields: [testId], references: [id])

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  answers                Answer[] // A submission is made up of many answers
  switchResult           SwitchChallengeResult?
  digitResult            DigitChallengeResult?
  canViewResult          Boolean                 @default(false)
  geoSudoChallengeResult GeoSudoChallengeResult?

  @@index([testId])
  @@index([studentId])
}

model Answer {
  id             Int     @id @default(autoincrement())
  selectedAnswer String
  isCorrect      Boolean

  // Relations
  submissionId Int
  submission   TestSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  questionId   Int
  question     Question       @relation(fields: [questionId], references: [id])
}

// =========================
// AON SWITCH CHALLENGE MODELS
// =========================

enum TestType {
  STANDARD
  SWITCH
  DIGIT
  GEOSUDO
}

model SwitchChallengeConfig {
  id              Int @id @default(autoincrement())
  testId          Int @unique
  durationSeconds Int @default(360)
  maxLevel        Int @default(5)

  test Test @relation(fields: [testId], references: [id], onDelete: Cascade)
}

model SwitchChallengeResult {
  id        Int      @id @default(autoincrement())
  userId    Int
  testId    Int
  score     Int
  accuracy  Float
  metrics   Json     @db.Json // Stores detailed metrics like { totalAttempts, avgReactionMs, maxLevel, violations }
  createdAt DateTime @default(now())

  // Optional: Relation to User and Test if needed for integrity constraints
  // For high performance, we might keep these as raw IDs or add relations if consistency is preferred over raw insert speed.
  // Given the requirement "Do one DB insert, No loops", adding relations here is fine as long as we insert using connect.

  user User @relation(fields: [userId], references: [id])
  test Test @relation(fields: [testId], references: [id])

  submissionId Int            @unique
  submission   TestSubmission @relation(fields: [submissionId], references: [id])
}

// =========================
// DIGIT CHALLENGE MODELS
// =========================

model DigitChallengeResult {
  id        Int      @id @default(autoincrement())
  userId    Int
  testId    Int
  score     Float
  accuracy  Float
  metrics   Json     @db.Json
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  test Test @relation(fields: [testId], references: [id])

  submissionId Int            @unique
  submission   TestSubmission @relation(fields: [submissionId], references: [id])
}

// =========================
// GEOSUDO CHALLENGE MODELS
// =========================

model GeoSudoChallengeResult {
  id        Int      @id @default(autoincrement())
  userId    Int
  testId    Int
  score     Float
  accuracy  Float
  metrics   Json     @db.Json
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  test Test @relation(fields: [testId], references: [id])

  submissionId Int            @unique
  submission   TestSubmission @relation(fields: [submissionId], references: [id])
}
