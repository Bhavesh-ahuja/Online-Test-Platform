generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum AttemptType {
  ONCE
  LIMITED
  UNLIMITED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  testsCreated Test[]           @relation("CreatedTests")
  submissions  TestSubmission[]
}

model Test {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  duration       Int
  scheduledStart DateTime?
  scheduledEnd   DateTime?
  createdAt      DateTime  @default(now())

  // New Features
  attemptType AttemptType @default(ONCE)
  maxAttempts Int?

  createdById Int
  createdBy   User @relation("CreatedTests", fields: [createdById], references: [id])

  questions   Question[]
  submissions TestSubmission[]
}

model Question {
  id            Int      @id @default(autoincrement())
  text          String
  type          String   @default("MCQ")
  options       String[]
  correctAnswer String

  testId Int
  test   Test @relation(fields: [testId], references: [id], onDelete: Cascade)

  answers Answer[] 
}

model TestSubmission {
  id        Int      @id @default(autoincrement())
  status    String   @default("COMPLETED")
  score     Int
  createdAt DateTime @default(now())

  testId Int
  test   Test @relation(fields: [testId], references: [id])

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  answers Answer[]
}

model Answer {
  selectedAnswer String
  isCorrect      Boolean

  questionId Int
  question   Question @relation(fields: [questionId], references: [id])

  submissionId Int
  submission   TestSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@id([submissionId, questionId])
}